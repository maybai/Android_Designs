<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myserviceactivity.MainActivity"
    tools:ignore="MergeRootFrame" >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent" >
         
          <Button
             android:id="@+id/bt_start_service"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/bt_stop_service"
             android:layout_alignParentTop="true"
             android:layout_marginTop="156dp"
             android:text="Start" />

         <Button
             android:id="@+id/bt_stop_service"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/bt_bind_service"
             android:layout_below="@+id/bt_start_service"
             android:text="Stop" />

         <Button
             android:id="@+id/bt_bind_service"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/bt_unbind_service"
             android:layout_below="@+id/bt_stop_service"
             android:text="Bind" />

        <Button
             android:id="@+id/bt_unbind_service"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/bt_exit"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="104dp"
             android:text="Unbind" />

         <Button
             android:id="@+id/bt_exit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/bt_bind_service"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="48dp"
             android:text="Exit" />

         <Button
             android:id="@+id/bt_send_broadcast"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/bt_start_service"
             android:layout_alignRight="@+id/bt_start_service"
             android:layout_marginBottom="52dp"
             android:text="Broadcast" />
         
     </RelativeLayout>

</FrameLayout>


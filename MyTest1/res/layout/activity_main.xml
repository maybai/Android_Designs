<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:windowActionBarOverlay="true"
    android:windowActionModeOverlay="true"
    tools:context="com.example.mytest1.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/hideBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide The Action Bar" >
    </Button>

    <Button
        android:id="@+id/showBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/hideBt"
        android:text="Show The Action Bar" />   

</RelativeLayout>